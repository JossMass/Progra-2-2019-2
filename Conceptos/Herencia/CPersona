#pragma once

#include <iostream>
#include <conio.h>
#include <string>

using namespace std;
using namespace System;

class Persona
{

protected:
	string nombre;
	int edad;
	int celular;

public:
	Persona(string nombre, int edad, int celular)
	{
		this->nombre = nombre;
		this->edad = edad;
		this->celular = celular;
	}

	~Persona() {}

	void MostrarDatosPersona()
	{
		cout << "Nombre: " << nombre << endl;
		cout << "Edad: " << edad << endl;
		cout << "Celular: " << celular << endl;
	}
};